	const int ROTATIONS = 4;
	char t_tetrad[ROTATIONS][3][3] = 
         {
          {{' ', ' ', ' '},
           {' ', 'X', ' '},
           {'X', 'X', 'X'}},
          {{' ', ' ', 'X'},
           {' ', 'X', 'X'},
           {' ', ' ', 'X'}},
          {{'X', 'X', 'X'},
           {' ', 'X', ' '},
           {' ', ' ', ' '}},
          {{'X', ' ', ' '},
           {'X', 'X', ' '},
           {'X', ' ', ' '}}
	   };



int main()
{
	char t[3][3] = {'O', 'X', ' ',
	                'X', 'O', ' ',
	                ' ', 'X', 'O'};

	for (int i = 0; i < 3; i++)
	{
	    for (int j = 0; j < 3; j++)
	    {
	        std::cout << t[i][j];
	    }
	    std::cout << std::endl;
	}

}
